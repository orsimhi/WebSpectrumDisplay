# TimescaleDB Connection Settings
# Copy this file to .env and update with your actual values

# Database host (localhost for local installations)
TIMESCALE_HOST=localhost

# Database port (default PostgreSQL port)
TIMESCALE_PORT=5432

# Database name
TIMESCALE_DB=spectrum_data

# Database username
TIMESCALE_USER=postgres

# Database password
TIMESCALE_PASSWORD=your_password_here

# Example for cloud TimescaleDB:
# TIMESCALE_HOST=your-instance.timescaledb.com
# TIMESCALE_PORT=5432
# TIMESCALE_DB=tsdb
# TIMESCALE_USER=tsdbadmin
# TIMESCALE_PASSWORD=your_cloud_password